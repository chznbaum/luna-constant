<figure>
<%= image_tag @photo.photo_upload %>
  <figcaption>
    <%= @photo.caption %> | Taken <%= distance_of_time_in_words(@photo.created_at, Time.now) %> ago and posted by <%= @photo.user.email %> | <%= pluralize(@photo.comments.count, "comment") %>
  </figcaption>
</figure>
<%= link_to 'Edit', edit_photo_path(@photo) if logged_in?(:site_admin, :helper) %>

<h3>Comments</h3>

<%= form_for [@photo, Comment.new] do |f| %>
  <%= f.label :body, 'Add a comment' %><br />
  <%= f.text_area :body %><br />
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.submit "Add comment" %>
<% end %>

<ul>
  <%= render(partial: 'comments/comment', collection: @photo.comments) %>
</ul>

<%= link_to 'Back', photos_path %>
