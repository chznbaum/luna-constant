<% provide(:title, "Home") %>
<div class="container">
  <div class="jumbotron">
    <div class="container">
      <h1><%= @site_title %></h1>
      <p>The homepage of <%= @child_name %>'s photos.</p>
      <p>
        <%= link_to 'Photos', photos_path, class: 'btn btn-primary' %>
        <%= link_to 'Invite Users', new_user_invitation_path, class: 'btn btn-default' if logged_in?(:site_admin, :helper) %>
        <% if current_user.is_a?(GuestUser) %>
          <%= link_to 'Log In', new_user_session_url, class: 'btn btn-default' %>
        <% else %>
          <%= link_to 'Log Out', './logout', method: :delete, class: 'btn btn-default' %>
        <% end %>
      </p>
    </div>
  </div>
</div>